using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            int n;
            int y;
            int d;
            int x;
            int a;
            Console.WriteLine("Please enter your number");
            n = Convert.ToInt32(Console.ReadLine());
            y = n * 2;

            Console.WriteLine(y);
            Console.WriteLine("Great!");



            Console.WriteLine("Please enter representor of (n)");
            n = Convert.ToInt32(Console.ReadLine());
            d = n / 2;

            Console.WriteLine(d);
            Console.WriteLine("Well done! This is the value of (d), d=n/2");
            Console.WriteLine( );

            Console.WriteLine("Pick another number for (a)");
            a = Convert.ToInt32(Console.Read());
            x = (a + 10);
            Console.WriteLine("You've just got an (x), which is (a + 10)");
            Console.WriteLine(x);


        }
    }
}
