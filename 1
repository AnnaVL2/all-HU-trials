using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {

            // check for ODD & EVEN number

            Console.WriteLine("Please enter your number, honey");
            int a = Convert.ToInt32(Console.ReadLine());

            if (a % 2 == 0)
            {
             Console.WriteLine("This is EVEN number, honey");
            }
            else
            {
             Console.WriteLine("This is ODD number, honey :)");
            }
        }
    }
}
